<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.imp.lpg.feature" default="build.feature.jar" basedir=".">
	<import file="../org.eclipse.imp.lpg.feature/buildCommon.xml"/>
	<import file="../org.eclipse.imp.update/buildFeatureCommon.xml"/>

	<target name="init">
		<property name="feature.name"        value="org.eclipse.imp.lpg"/>
		<property name="feature.version"     value="${lpg.version}"/>
		<property name="feature.temp.folder" value="${basedir}/feature.temp.folder"/>
		<property name="feature.destination" value="${basedir}"/>
	</target>

	<target name="all.plugins"
		depends="build.imp.lpg,build.lpg.metatooling">
	</target>

	<!-- RMF Copy the plugin jars to the 'plugins' folder so that exportUpdate script can see it -->
	<target name="gather.plugin.jars" depends="all.plugins">
		<delete failonerror="false">
			<fileset dir="plugins" includes="*.jar"/>
		</delete>
		<mkdir dir="plugins"/>
		<antcall target="copy.child">
			<param name="plugin.id" value="org.eclipse.imp.lpg.metatooling"/>
		</antcall>
		<antcall target="copy.child">
			<param name="plugin.id" value="org.eclipse.imp.lpg"/>
		</antcall>
<!--	<copy todir="plugins" file="../org.eclipse.imp.lpg.metatooling/org.eclipse.imp.lpg.metatooling_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.lpg/org.eclipse.imp.lpg_${lpg.version}.jar"/>
  -->
	</target>

	<!-- ========================================================================================= -->

	<!-- N.B.: The LPG runtime is not part of this plugin, since other parts of -->
	<!-- IMP need it (e.g. the transformation toolkit).                         -->

	<target name="build.lpg.metatooling">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.lpg.metatooling"/>
		</antcall>
	</target>

	<target name="build.imp.lpg">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.lpg"/>
		</antcall>
	</target>
</project>
