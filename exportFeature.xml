<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.safari.jikespg.feature" default="build.feature.jar" basedir=".">
	<import file="../com.ibm.watson.safari.feature/buildCommon.xml"/>
	<import file="../com.ibm.watson.safari.update/buildFeatureCommon.xml"/>

	<target name="init">
		<property name="feature.name"        value="org.eclipse.safari.jikespg"/>
		<property name="feature.version"     value="${safari.version}"/>
		<property name="feature.temp.folder" value="${basedir}/feature.temp.folder"/>
		<property name="feature.destination" value="${basedir}"/>
	</target>

	<target name="all.plugins"
		depends="build.jikespg.uide,build.safari.jikespg">
	</target>

	<!-- RMF Copy the plugin jars to the 'plugins' folder so that exportUpdate script can see it -->
	<target name="gather.plugin.jars" depends="all.plugins">
		<delete failonerror="false">
			<fileset dir="plugins" includes="*.jar"/>
		</delete>
		<mkdir dir="plugins"/>
		<copy todir="plugins" file="../org.jikespg.uide/org.jikespg.uide_${feature.version}.jar"/>
		<copy todir="plugins" file="../org.eclipse.safari.jikespg/org.eclipse.safari.jikespg_${feature.version}.jar"/>
	</target>

	<!-- ========================================================================================= -->

	<!-- N.B.: The JikesPG/LPG runtime is not part of this plugin, since other parts of -->
	<!-- SAFARI need it (e.g. the transformation toolkit).                              -->

	<target name="build.jikespg.uide">
		<antcall target="build.child">
			<param name="plugin.id" value="org.jikespg.uide"/>
		</antcall>
	</target>

	<target name="build.safari.jikespg">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.safari.jikespg"/>
		</antcall>
	</target>
</project>
